<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/bookTypeMainCoverIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bookTypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textSize="12sp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/bookTypeMainCoverIV"
        app:layout_constraintStart_toStartOf="@+id/bookTypeMainCoverIV"
        app:layout_constraintTop_toBottomOf="@+id/bookTypeMainCoverIV" />
</androidx.constraintlayout.widget.ConstraintLayout>