<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onlinebookstore.mapper.UserMapper">
    <resultMap id="BaseUserMap" type="com.onlinebookstore.entity.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="a_id" property="accountUsername" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="birthday" property="birthday" jdbcType="TIMESTAMP"/>
        <result column="sex" property="sex" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--关联映射-->
    <resultMap id="UserContainAccountMap" type="com.onlinebookstore.entity.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="a_id" property="accountUsername" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="birthday" property="birthday" jdbcType="TIMESTAMP"/>
        <result column="sex" property="sex" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP"/>

        <association property="account" column="a_id" javaType="com.onlinebookstore.entity.Account">
            <id column="username" property="username" jdbcType="VARCHAR"/>
            <result column="password" property="password" jdbcType="VARCHAR"/>
            <result column="score" property="score" jdbcType="INTEGER"/>
            <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        </association>
    </resultMap>

    <sql id="baseUserInfo">
        id, a_id, nickname, birthday, sex, phone, last_login_time
    </sql>

    <sql id="baseUserInfoNoId">
        a_id, nickname, birthday, sex, phone, last_login_time
    </sql>

    <sql id="userAssociationAccount">
        id, a_id, nickname, birthday, sex, phone, last_login_time, username, password, score, create_time
    </sql>

    <insert id="addUser" keyProperty="id" keyColumn="id" useGeneratedKeys="true">
        insert into sys_user(<include refid="baseUserInfoNoId"/>)
        values (#{accountUsername}, #{nickname}, #{birthday}, #{sex}, #{phone}, #{lastLoginTime});
    </insert>

    <select id="selectUserByUsername" resultType="com.onlinebookstore.entity.User">
        select <include refid="baseUserInfo"/>
        from sys_user
        where a_id = #{accountUsername};
    </select>

    <select id="selectAllUser" resultType="com.onlinebookstore.entity.User">
        select <include refid="baseUserInfo"/>
        from sys_user;
    </select>

    <update id="modifyUserById">
        update sys_user
        set nickname = #{nickname}, birthday = #{birthday}, sex = #{sex}, phone = #{phone}
        where id = #{id}
    </update>

    <select id="getUserContainAccountById" resultMap="UserContainAccountMap">
        select <include refid="userAssociationAccount"/>
        from sys_user u
        left join sys_account a on u.a_id = a.username
        where u.id = #{id};
    </select>
</mapper>